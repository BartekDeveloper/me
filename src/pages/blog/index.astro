---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.svelte';

const posts = [
  {
    title: "Building a Portfolio with Astro & Svelte",
    excerpt: "How I built this website using the latest web technologies including Astro, Svelte, and Tailwind v4.",
    date: "Nov 21, 2025",
    slug: "building-portfolio"
  },
  {
    title: "Why I Chose Drizzle ORM",
    excerpt: "A deep dive into why Drizzle ORM is my go-to choice for TypeScript backend development.",
    date: "Oct 15, 2025",
    slug: "why-drizzle"
  },
  {
    title: "The Future of Web Development",
    excerpt: "My thoughts on the evolving landscape of web frameworks and tools.",
    date: "Sep 01, 2025",
    slug: "future-web-dev"
  }
];
---

<MainLayout title="Blog | ZOTA" description="Thoughts and tutorials on web development.">
  <div class="pt-32 pb-20 px-6 max-w-7xl mx-auto min-h-screen">
    <h1 class="text-fluid-h1 font-bold mb-4">
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-500">My</span>
      <span class="text-neon-green">Blog</span>
    </h1>
    <p class="text-fluid-p text-gray-400 mb-16 max-w-2xl">
      Thoughts, tutorials, and insights about web development, design, and technology.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <a href={`/blog/${post.slug}`} class="block group">
          <div class="h-full p-8 rounded-2xl glass border border-white/5 hover:border-neon-green/30 transition-all duration-300 hover:-translate-y-1">
            <div class="text-sm text-neon-purple mb-4">{post.date}</div>
            <h2 class="text-2xl font-bold mb-3 group-hover:text-neon-green transition-colors">{post.title}</h2>
            <p class="text-gray-400 leading-relaxed">{post.excerpt}</p>
            <div class="mt-6 flex items-center text-sm font-medium text-white group-hover:translate-x-2 transition-transform">
              Read Article 
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</MainLayout>
